@using Microsoft.AspNetCore.Identity

@using FamilyHub.IdentityServerHost.Models.Links

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<header class="govuk-header das-header--no-border" role="banner" data-module="header">
        <div class="govuk-header__container govuk-width-container">
            <div class="govuk-header__logo">
                @Html.Raw(Model.RenderLink<GovUk>())
            </div>
            <div class="govuk-header__content">
            @if (SignInManager.IsSignedIn(User))
            {
                @Html.Raw(Model.RenderLink<HomeLink>())
                @Html.Raw("&nbsp;&nbsp;&nbsp");
                @Html.Raw(Model.RenderLink<SignOutLink>())
            }
            else
            {
                @Html.Raw(Model.RenderLink<SignInLink>())
            }
                
                
                
                @*@Html.Raw(Model.RenderLink<OrganisationAdminLink>())*@
				@*@Html.Raw(Model.RenderLink<WeatherForecast>()) &nbsp;&nbsp;&nbsp;
				@Html.Raw(Model.RenderLink<ToDoSelection>())*@
            </div>
        </div>
    </header>
	