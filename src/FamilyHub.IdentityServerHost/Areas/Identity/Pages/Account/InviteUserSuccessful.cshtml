@page
@model FamilyHub.IdentityServerHost.Areas.Identity.Pages.Account.InviteUserSuccessfulModel
@{
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    Invitation Sent
                </h1>
            </div>

            <p>The invitation for the user @Model.Email has successfully been sent.</p>

            <h2 class="govuk-heading-m govuk-!-margin-top-6">What happens next</h2>

            <p class="govuk-body">The user will need to register a new account within the next 24 hours.</p>

            <form method="post">
                <button type="submit" class="govuk-button">
                    Go to home page
                </button>
            </form>

        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

